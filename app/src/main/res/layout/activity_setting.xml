<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="4"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <TextView
        android:text="@string/baseTimeSelect"
        android:layout_column="0"
        android:layout_row="0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioHour"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/labelHour" />

        <RadioButton
            android:id="@+id/radioMinute"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/labelMinute" />
    </RadioGroup>

    <TextView
        android:text="@string/baseTime"
        android:layout_column="0"
        android:layout_row="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/txtBaseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:ems="10"
        android:inputType="number"
        android:gravity="end" />

    <TextView
        android:text="@string/baseAmount"
        android:layout_column="0"
        android:layout_row="2"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/txtBaseAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:ems="10"
        android:inputType="number"
        android:gravity="end" />

    <TextView
        android:text="@string/baseDayOfMonth"
        android:layout_column="0"
        android:layout_row="3"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/txtBaseDayOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:ems="2"
        android:inputType="number"
        android:layout_gravity="start"
        android:gravity="center" />

    <TextView
        android:id="@+id/baseDayOfMonthInfo"
        android:layout_column="2"
        android:layout_row="3"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="start"/>

</GridLayout>